{
  "moduleFileExtensions": ["js", "json", "ts"],
  "verbose": true,
  "rootDir": "src",
  "testMatch": ["**/*.spec.ts"],
  "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "testEnvironment": "node",
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "coverageReporters": ["json-summary", "text", "lcov"],
  "coverageThreshold": {
    "global": {
      "branches": 10,
      "functions": 10,
      "lines": 10,
      "statements": 10
    }
  },
  "coveragePathIgnorePatterns": ["<rootDir>/types"],
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/$1"
  }
}
